<div class="container">
  <h1>Restaurant <%=@restaurant.name%></h1>

  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category.capitalize %></p>

  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">Rating : <%= review.rating %>/5</li>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>

   <h3>Add a review</h3>
    <div class="form">
      <%= simple_form_for [ @restaurant, @review ] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :content %>
    </div>
    <div class="buttons">
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
      <div class="button">
        <%= link_to "Back to list", restaurants_path, class: "btn btn-primary"%>
      </div>
    </div>
</div>
