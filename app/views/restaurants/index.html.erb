<div class="container">
  <h1>All restaurants</h1>

  <div class="box">
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li><%= link_to restaurant.name, restaurant_path(restaurant.id) %></li>
      <% end %>
    </ul>
  </div>

  <div class="button">
    <%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary"%>
  </div>
</div>
